@using Bookstore.Models
@model Category


<div class="container mt-5">
    <div class="card shadow-sm p-4" style="background-color: #ffebee; border: none;">
        <div class="card-header text-center" style="background-color: #e57373; color: white; border-radius: 8px;">
            <h2>Delete Category</h2>
        </div>
        <div class="card-body">
            <p class="text-danger text-center fw-bold">Are you sure you want to delete this category?</p>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" disabled class="form-control bg-light" />
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label fw-bold"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control bg-light" />
                </div>
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
