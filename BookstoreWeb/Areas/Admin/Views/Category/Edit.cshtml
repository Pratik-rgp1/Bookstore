@using Bookstore.Models
@model Category

<div class="container mt-5">
    <div class="card shadow-sm p-4" style="background-color: #e8f5e9; border: none;">
        <div class="card-header text-center" style="background-color: #a5d6a7; color: #1b5e20; border-radius: 8px;">
            <h2>Edit Category</h2>
        </div>
        <div class="card-body">
            <form method="post">
                @* <input type="hidden" asp-for="Id" />  *@
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label fw-bold"></label>
                    <input asp-for="DisplayOrder" class="form-control" placeholder="Display order" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-success px-4">Update</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
